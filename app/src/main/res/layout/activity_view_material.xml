<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewMaterialActivity">

    <LinearLayout
        android:id="@+id/LLmaterialList"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#5F9866">

        <ImageView
            android:id="@+id/back3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/baseline_arrow_back_24" />

        <TextView
            android:id="@+id/tvMaterialList"
            android:layout_width="wrap_content"
            android:layout_height="35sp"
            android:layout_marginLeft="11dp"
            android:text="Bảng giá các nguyên vật liệu"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ListView
        android:id="@+id/lvMaterial"
        android:layout_width="350dp"
        android:layout_height="570dp"
        android:layout_below="@+id/LLmaterialList"
        android:layout_alignParentStart="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="43dp" />


</RelativeLayout>