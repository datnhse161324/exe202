<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/LLVmaterial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvNameText"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Tên nguyên liệu: "
            android:paddingLeft="5dp"
            android:gravity="center_vertical"
            android:textSize="20dp"
            android:textColor="#5F9866"/>

        <TextView
            android:id="@+id/tvNameMaterial"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Tên nguyên liệu "
            android:paddingLeft="5dp"
            android:gravity="center_vertical"
            android:textSize="20dp"
            android:textColor="#5F9866"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/LLVPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LLVmaterial"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvPriceText"
            android:layout_width="200dp"
            android:layout_height="25dp"
            android:text="Giá (VNĐ/ Kg):"
            android:paddingLeft="5dp"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:textColor="#5F9866"/>

        <TextView
            android:id="@+id/tvUnitPrice"
            android:layout_width="200dp"
            android:layout_height="25dp"
            android:text="10000"
            android:paddingLeft="5dp"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:textColor="#5F9866"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/LLVPrice"
        android:background="#5F9866"/>
</RelativeLayout>