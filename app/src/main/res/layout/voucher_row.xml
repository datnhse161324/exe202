<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/LLVname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvNameVoucher"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Ten voucher"
            android:paddingLeft="5dp"
            android:gravity="center_vertical"
            android:textSize="20dp"
            android:textColor="#5F9866"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LLVExprirdDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LLVname"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvExprirdText"
            android:layout_width="200dp"
            android:layout_height="25dp"
            android:text="Hạn sử dụng"
            android:paddingLeft="5dp"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:textColor="#5F9866"/>

        <TextView
            android:id="@+id/tvExprirdDate"
            android:layout_width="200dp"
            android:layout_height="25dp"
            android:text="dd/mm/yyyy"
            android:paddingLeft="5dp"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:textColor="#5F9866"/>

    </LinearLayout>
    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/LLVExprirdDate"
        android:text="Mô tả"
        android:paddingLeft="5dp"
        android:gravity="center_vertical"
        android:textSize="15sp"
        android:textColor="#5F9866"/>

    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/tvDescription"
        android:text="Giá"
        android:paddingRight="15dp"
        android:gravity="right"
        android:textSize="15sp"
        android:textColor="#5F9866"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/tvPrice"
        android:background="#5F9866"/>


</RelativeLayout>