<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/start"
    tools:context=".RegisterActivity">

    <ImageView
        android:id="@+id/mot2"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="105dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/mot" />

    <RelativeLayout
        android:id="@+id/rl2"
        android:layout_width="300dp"
        android:layout_height="450dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="179dp"
        android:background="#5F9866">

        <EditText
            android:id="@+id/RUsername"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="45dp"
            android:background="#FFFFFF"
            android:hint="Tên đăng nhập"
            android:paddingLeft="5dp" />

        <EditText
            android:id="@+id/RPassword"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="108dp"
            android:background="#FFFFFF"
            android:hint="Mật khẩu"
            android:inputType="textPassword"
            android:paddingLeft="5dp" />

        <EditText
            android:id="@+id/RePassword"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="169dp"
            android:background="#FFFFFF"
            android:hint="Nhập lại mật khẩu"
            android:inputType="textPassword"
            android:paddingLeft="5dp" />

        <EditText
            android:id="@+id/RPhone"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="233dp"
            android:background="#FFFFFF"
            android:hint="Số điện thoại"
            android:paddingLeft="5dp" />

        <EditText
            android:id="@+id/RAddress"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="294dp"
            android:background="#FFFFFF"
            android:hint="Địa chỉ"
            android:paddingLeft="5dp" />

        <Button
            android:id="@+id/register2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="85dp"
            android:layout_marginTop="351dp"
            android:text="ĐĂNG KÝ"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/yesAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="33dp"
            android:layout_marginTop="405dp"
            android:gravity="top"
            android:text="Đã có tài khoản?" />

        <TextView
            android:id="@+id/login2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="187dp"
            android:layout_marginTop="405dp"
            android:gravity="top"
            android:text="Đăng nhập"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />
    </RelativeLayout>

</RelativeLayout>