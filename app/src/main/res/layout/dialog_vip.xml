<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textVIP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:padding="10dp"
        android:text="Hãy mua gói Premium để nhận thêm ưu đãi"
        android:textColor="@color/primary"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textPremium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:layout_marginHorizontal="10sp"
        android:textStyle="italic"
        android:layout_below="@+id/textVIP"
        android:text="@string/MomoMessage"/>

    <ImageView
        android:id="@+id/imMomo"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_below="@+id/textPremium"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:background="@drawable/momoo" />

        <TextView
            android:id="@+id/textBuy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imMomo"
            android:layout_centerHorizontal="true"
            android:text="Scan mã QR để đăng ký gói \n hoặc"
            android:textAlignment="center"
            android:textSize="17sp" />

    <Button
        android:id="@+id/buttonHuy2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textBuy"
        android:layout_alignParentBottom="true"
        android:text="Huy"
        android:textSize="20sp" />
</RelativeLayout>
</ScrollView>