<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/start"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/mot2"
        android:layout_width="200dp"
        android:layout_height="140dp"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/mot" />

    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_below="@+id/mot2"
        android:layout_centerHorizontal="true"
        android:background="#5F9866">

        <EditText
            android:id="@+id/LUsername"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="45dp"
            android:background="#FFFFFF"
            android:hint="Tên đăng nhập"
            android:paddingLeft="5dp" />

        <EditText
            android:id="@+id/LPassword"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="108dp"
            android:background="#FFFFFF"
            android:hint="Mật khẩu"
            android:inputType="textPassword"
            android:paddingLeft="5dp" />

        <TextView
            android:id="@+id/forget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="178dp"
            android:layout_marginTop="163dp"
            android:gravity="top"
            android:text="Quên mật khẩu?" />

        <Button
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="69dp"
            android:layout_marginTop="195dp"
            android:text="ĐĂNG NHẬP"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/noAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="31dp"
            android:layout_marginTop="253dp"
            android:gravity="top"
            android:text="Chưa có tài khoản?" />

        <TextView
            android:id="@+id/register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="208dp"
            android:layout_marginTop="253dp"
            android:gravity="top"
            android:text="Đăng ký"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />
    </RelativeLayout>

</RelativeLayout>