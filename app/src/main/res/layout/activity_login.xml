<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/start"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/mot2"
        android:layout_width="200dp"
        android:layout_height="140dp"
        android:layout_marginTop="110dp"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/mot" />

    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:layout_below="@+id/mot2"
        android:layout_centerInParent="true"
        android:background="@drawable/layout_dg"
        android:backgroundTint="@color/primary">

        <EditText
            android:id="@+id/LUsername"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/layout_dg"
            android:hint="Tên đăng nhập"
            android:focusedByDefault="true"
            android:maxLines="1"
            android:inputType="text"
            android:nextFocusDown="@id/LPassword"
            android:paddingLeft="5dp" />

        <EditText
            android:id="@+id/LPassword"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="90dp"
            android:layout_below="@+id/LUsername"
            android:background="@drawable/layout_dg"
            android:hint="Mật khẩu"
            android:maxLines="1"
            android:inputType="textPassword"
            android:paddingLeft="5dp" />

        <TextView
            android:id="@+id/forget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="178dp"
            android:layout_marginTop="150dp"
            android:textColor="#FFFFFF"
            android:gravity="top"
            android:text="Quên mật khẩu?" />

        <Button
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="69dp"
            android:layout_marginTop="175dp"
            android:text="ĐĂNG NHẬP"
            android:textSize="20sp"
            android:textColor="#5F9866"
            android:backgroundTint="#FFFFFF"/>

        <TextView
            android:id="@+id/noAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="31dp"
            android:layout_marginTop="233dp"
            android:textColor="#FFFFFF"
            android:gravity="top"
            android:text="Chưa có tài khoản?" />

        <TextView
            android:id="@+id/register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="208dp"
            android:layout_marginTop="233dp"
            android:gravity="top"
            android:text="Đăng ký"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="256dp"
            android:gravity="top"
            android:text="------------Hoặc------------"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />
        <Button
            android:id="@+id/btnEmployeeLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="280dp"
            android:gravity="top"
            android:text="Đăng nhập cho nhân viên"
            android:textSize="20sp"
            android:textColor="#5F9866"
            android:backgroundTint="#FFFFFF"/>
    </RelativeLayout>

</RelativeLayout>